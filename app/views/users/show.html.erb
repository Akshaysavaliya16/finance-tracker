<h2>User details</h2>

<div class="card card-header result-block">
  <table class = "col-md-12">
    <tbody>
        <tr>
          <td><strong>full name: </strong> <%= @user.full_name %></td>
          <td><strong>email: </strong> <%= @user.email %></td>
          <td>
            <% if current_user.not_friends_with?(@user.id) %>
              <%= link_to 'Follow friend?', friendships_path(friend: @user), class: "btn btn-sm btn-success", method: :post %>
            <% else %>
              <span class = "badge bg-primary">
                You are friends
              </span>
            <% end %>
          </td>
        </tr>
    </tbody>
  </table>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class = "lead"> This user don't have any stock to track.</p>
<% end %>
